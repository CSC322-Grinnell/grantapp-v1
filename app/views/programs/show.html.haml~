%div{:style => 'margin: 30px'}
  %h1= "Program: #{@program.name}"
  %p
    %strong Program Info:
    %br
    =@program.info
  %p 
    %strong Start Date: 
    =@program.start_date
  %p 
    %strong End Date: 
    =@program.end_date
  %p
    %strong Status: 
    - if @program.pending
      Pending
    - else    
      Active

  - if @program.form_url.empty?
    %p Form Not Available
  -else
    = link_to 'View Form', "http://http://" + @program.form_url

    %br

  - if current_user.role != 'Applicant'
    = link_to 'Edit Program', edit_program_path(@program.id)

    %br

    = link_to 'Back to Program', programs_path
    %br
    = link_to 'Back to Dashboard', dashboard_path

