%div{:style => 'margin: 30px'}
  %p= "Program: #{@program.name}"
  %p= "Program Info: #{@program.info}"
  %p= "Start Date: #{@program.start_date}"
  %p= "End Date: #{@program.end_date}"
  %p
    Status: 
    - if @program.pending
      Pending
    - else    
      Active

- if @program.form_url == nil || @program.form_url.empty?
  %p Form Not Available
-else
  = link_to 'View Form', @program.form_url

- if current_user.role != 'Applicant'
  = link_to 'Edit Program', edit_program_path(@program.id)

%br

= link_to 'Back to Program', programs_path
= link_to 'Back to Dashboard', dashboard_path
